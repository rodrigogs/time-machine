{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
		"outDir": "out",
		"rootDir": ".",
		"sourceMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		".history"
	]
}
